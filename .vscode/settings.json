{
    "editor.largeFileOptimizations": true,
    "editor.detectIndentation": false,
    "explorer.sortOrder": "type",
    "files.associations": {
        "*.json": "json",
        "*.inc": "makefile",
        "*.anim": "yaml",
        "cstring": "cpp",
        "tuple": "cpp",
        "complex": "cpp"
    },
    "cSpell.customDictionaries": {
        "custom-dictionary-workspace": {
            "name": "custom-dictionary-workspace",
            "path": "${workspaceFolder:ksnucleus}/.cspell/custom-dictionary-workspace.txt",
            "addWords": true,
            "scope": "workspace"
        }
    },
}